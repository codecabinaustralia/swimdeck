<p id="notice"><%= notice %></p>

<h1>Lessons</h1>

<table class="ui celled table sortable stacked striped">

  <thead>
    <tr>
      <th>Start time</th>
      <th>Finish time</th>
      <th>User</th>
      <th>Site</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.start_time %></td>
        <td><%= lesson.finish_time %></td>
        <td><%= lesson.user.email %></td>
        <td><%= lesson.site.title %></td>
        <td><%= link_to 'Show', lesson %></td>
        <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
        <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

  
</table>

<br>

<%= link_to 'New Lesson', new_lesson_path %>
