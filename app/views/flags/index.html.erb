<p id="notice"><%= notice %></p>

<h1>Flags</h1>

<table class="ui celled table sortable stacked striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Number of days</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flags.each do |flag| %>
      <tr>
        <td><%= flag.title %></td>
        <td><%= flag.number_of_days %></td>
        <td><%= link_to 'Show', flag %></td>
        <td><%= link_to 'Edit', edit_flag_path(flag) %></td>
        <td><%= link_to 'Destroy', flag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Flag', new_flag_path %>
