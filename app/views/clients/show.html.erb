<div class="grid-container" style="padding-top: 50px; margin-bottom: 500px;">
  <h1>Your Children</h1>
  <div class="grid-x grid-margin-x grid-margin-y">
    <div class="cell small-12 medium-3">
    <%= link_to edit_user_registration_path do %>
    <div class="" style="border:3px #19935c dashed; border-radius: 10px; padding: 20px 40px; color: #fff; font-size: 20px; text-align: center; background-color: #31aa72; ">
      <img src="https://imgc.allpostersimages.com/img/print/u-g-Q1033NM0.jpg?w=550&h=550&p=0" style="border-radius: 50%; width: 200px; height: 200px; object-fit: cover; margin: 20px 0; border: 3px solid #19935c;">
      <div>Let's take a selfie!</div>
    </div>
    <% end %>
    </div>
    <% @students.each do |student| %>
      <div class="cell small-12 medium-3">
        <div class="student-card-head">
          <div class="text-center" style="color: #fff; padding-top: 50px;">
            <h2><%= student.full_name %></h2>
          </div>
          <div class="student-card-avatar">
            <% if student.avatar.attached? %>
                <%= image_tag(student.avatar) %>
            <% else %>
                <img src="https://upload.wikimedia.org/wikipedia/commons/7/7c/Profile_avatar_placeholder_large.png">
            <% end %>
          </div>
        </div>
        <div class="student-card-base">
          <div class="text-center" style="margin-top: 20px;">
            <%= link_to "View Profile", student_path(student), class: "button success" %>
          </div>
        </div>
      </div>
    <% end %>
    
    <div class="cell small-12 medium-3">
      <div class="student-card-all">
        <div class="text-center" style="padding-top: 20px;">
          <h2 style="color: #fff;">View combined timeline</h2>
          <%= link_to "View Now", student_path(@last_student.id, show_multiple: true), class: "button success hollow", style: "border: 3px solid white; color: #fff;" %>
        </div>
      </div>
    </div>

  </div>
</div>
