<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table class="ui celled table sortable stacked striped">
  <thead>
    <tr>
      <th>User</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone 1</th>
      <th>Phone 2</th>
      <th>Address</th>
      <th>Address city</th>
      <th>Address state</th>
      <th>Address postcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.user.email %></td>
        <td><%= client.first_name %></td>
        <td><%= client.last_name %></td>
        <td><%= client.phone_1 %></td>
        <td><%= client.phone_2 %></td>
        <td><%= client.address %></td>
        <td><%= client.address_city %></td>
        <td><%= client.address_state %></td>
        <td><%= client.address_postcode %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

